{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "globalDependencies": [
    "tsconfig.json",
    "tools/utils/scripts/**",
    "tools/utils/nix/**"
  ],
  "pipeline": {
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "package.json",
        "tsconfig*.json",
        "pnpm-lock.yaml",
        "scripts/**/*.ts",
        "scripts/**/*.tsx",
        "scripts/**/*.json",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json"
      ],
      "outputs": []
    },
    "build": {
      "dependsOn": [
        "typecheck",
        "^build"
      ],
      "inputs": [
        "package.json",
        "tsconfig*.json",
        "pnpm-lock.yaml",
        "webpack*.js",
        "vite.config.ts",
        "scripts/**",
        "src/**",
        "themes/**",
        "css/**",
        "images/**"
      ],
      "outputs": ["dist/**", "frontend-assets/**", "backend-assets/**"]
    },
    "test": {
      "dependsOn": ["typecheck", "$CI_MODE", "$COLLECT_COVERAGE"],
      "inputs": [
        "package.json",
        "tsconfig*.json",
        "pnpm-lock.yaml",
        "vite.config.ts",
        "jest.config.js",
        "scripts/**",
        "src/**"
      ],
      "outputs": ["js-test-results/**"]
    }
  }
}
