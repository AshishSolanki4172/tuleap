<div id="admin-config-bot-add"
    class="modal hide fade"
    tabindex="-1"
    role="dialog"
    aria-labelledby="admin-config-bot-add-title"
    aria-hidden="true"
>

    <div class="modal-header">
        <a role="button" class="close" data-dismiss="modal"><i class="icon-remove"></i></a>
        <h3 id="configuration-add-bot-title">{{ modal_add_title }}</h3>
    </div>


    <form method="POST" action="/plugins/botmattermost_git/?action=add_bot">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}
        <input type="hidden" name="group_id" value="{{ project_id }}" />
        <input type="hidden" name="repository_id" value="{{ repository_id }}" />

        <div class="modal-body">
            {{# has_bots }}
                <div class="form-group">
                    <label class="control-label col-sm-2" for="select_bot">Bot list:</label>
                    <div class="col-sm-8">
                        <select name="bot_id" class="form-control" id="select_bot">
                            {{# bots }}
                                <option {{# getAvatarUrl }}data-image="{{ getAvatarUrl }}"{{/ getAvatarUrl }}
                                        value="{{ getId }}">{{ getName }}</option>
                            {{/ bots}}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="bot-mattermost-channels-names">{{ label_channels_handles }}</label>
                    <div class="col-sm-8">
                        <input id="add_channels"
                               class="input_channels"
                               name="channels"
                               placeholder="{{ input_channels_handles }}"
                               hidden
                               multiple
                        />
                        <p class="text-info"><i class="icon-info-sign"></i> {{{ purified_info_channels_handles }}}</p>
                    </div>
                </div>
            {{/ has_bots }}
            {{^ has_bots }}
                <p>{{ empty_bot_list }}</p>
            {{/ has_bots }}
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{ button_close }}</button>
            <button type="submit" class="btn btn-primary">{{ button_confirm }}</button>
        </div>
    </form>

</div>