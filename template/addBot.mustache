<h1>{{ title }}</h1>
<form class="form-horizontal" method="POST" action="?action=add_bot" >
    {{{ csrf_input }}}
    <legend>{{ legend_bot }}</legend>
    <div class="control-group">
        <label class="control-label" for="bot-mattermost-name">{{ label_bot_name }}</label>
        <div class="controls">
            <input id="bot-mattermost-name" type="text" name="bot_name" placeholder= "{{ input_bot_name }}" required>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="bot-mattermost-webhook-url">{{ label_hook_url }}</label>
        <div class="controls">
            <input id="bot-mattermost-webhook-url" type="url" name="webhook_url" placeholder="{{ input_url }}" required pattern="https?://.+">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="bot-mattermost-avatar-url">{{ label_avatar_url }}</label>
        <div class="controls">
            <input id="bot-mattermost-avatar-url" type="url" name="avatar_url" placeholder="{{ input_url }}" pattern="https?://.+">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="bot-mattermost-channels-names">{{ label_channels_names }}</label>
        <div class="controls">
            <textarea id="bot-mattermost-channels-names" type="text" name="channels_names" rows="3"></textarea></br>
            <span style="color:#999; font-size:0.8em;">{{text_area_channels_names_help}}</span>
        </div>
    </div>
    <div class="controls">
        <button type="submit" class="btn btn-primary">{{ button_submit }}</button>
    </div>
</form>