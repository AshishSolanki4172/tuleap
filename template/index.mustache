<h1>{{ title }}</h1>
<div>
    <table class="table table-bordered table-striped" id="bot_list">
        <thead>
            <tr>
                <th>#</th>
                <th>{{ table_col_avatar }}</th>
                <th>{{ table_col_name }}</th>
                <th>{{ table_col_webhook_url }}</th>
                <th>{{ table_col_channels }}</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            {{# has_bots }}
                {{# bots }}
                    <tr>
                        <td>{{ getId }}</td>
                        <td>{{# getAvatarUrl }}<img src="{{ getAvatarUrl }}" class="img-circle" width="30" height="30">{{/ getAvatarUrl }}</td>
                        <td>{{ getName }}</td>
                        <td>{{ getWebhookUrl }}</td>
                        <td>{{ getChannelsNamesInOneRow }}</td>
                        <td>
                            <form class="form-horizontal" method="POST" action="?action=delete_bot&id={{ getId }}" >
                                {{{ csrf_input }}}
                                <span>
                                    <button type="submit" class="btn btn-link" onclick="return confirm('{{ confirm_delete_bot }} {{ getName }} ?');">
                                        <i class="icon-trash"></i> {{ delete }}
                                    </button>
                                </span>
                            </form>
                        </td>
                    </tr>
                {{/ bots }}
            {{/ has_bots }}
            {{^ has_bots }}
                <tr>
                    <td>{{ empty_bot_list }}</td>
                </tr>
            {{/ has_bots }}
        </tbody>
    </table>
</div>
<form class="form-horizontal" method="POST" action="?action=show_add_bot" >
    {{{ csrf_input }}}
    <button type="submit" class="btn btn-primary"><i class="icon-plus"></i> {{ button_add_bot }}</button>
</form>