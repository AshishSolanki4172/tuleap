<div id="git-notification-mattermost-section">
<h3>{{title}}</h3>
    {{^ bot_assigned }}
        <p>{{ any_configured_notification }}</p>
        <button class="btn btn-primary" data-toggle="modal" href="#admin-config-bot-add">
            {{ button_config }}
        </button>
        {{> modal-add-bot }}
    {{/ bot_assigned }}
    {{# bot_assigned }}
        <div>
            <p class="bot-assigned-label">{{ label_bot_name }}</p>
            <p>{{# avatar }}<img class="avatar img-circle" src="{{ avatar }}">{{/ avatar }}{{ name }}</p>
        </div>
        <div>
            <p class="bot-assigned-label">{{ label_channels_handles }}</p>
            <p>{{ channels }}</p>
        </div>

        <button class="btn btn-primary" data-toggle="modal" href="#admin-config-bot-edit-{{ id }}">
            <i class="icon-edit"></i> {{ button_edit }}
        </button>
        {{> modal-edit-bot }}
        <button class="btn btn-danger" data-toggle="modal" href="#admin-config-bot-delete-{{ id }}">
            <i class="icon-trash"></i> {{ button_delete }}
        </button>
        {{> modal-delete-bot }}
    {{/ bot_assigned }}
</div>