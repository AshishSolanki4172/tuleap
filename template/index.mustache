<form name="edit_git_botmattermost" method="post" action="/plugins/botmattermost_git/?group_id={{ project_id }}">
    <fieldset>
        <legend>{{title}}</legend>
        {{{ csrf_input }}}
        <input type="hidden" name="action" value="edit_notification" />
        <input type="hidden" name="repository_id" value="{{ repository_id }}" />

        <h3>{{ table_title }}</h3>
        <p>{{ description }}</p>
        <table class="table table-bordered table-striped" id="bot_list">
            <thead>
                <tr>
                    <th></th>
                    <th>ID</th>
                    <th>{{ table_col_name }}</th>
                    <th>{{ table_col_webhook_url }}</th>
                </tr>
            </thead>
            <tbody>
                {{# botListIsEmpty }}
                <tr>
                    <td>{{ empty_bot_list }}</td>
                </tr>
                {{/ botListIsEmpty }}
                {{^ botListIsEmpty }}
                {{# bots }}
                    <tr>
                        <td><input type="checkbox" name="bots_ids[]" value="{{ id }}" {{# is_assigned }}checked="checked"{{/ is_assigned }}></td>
                        <td>{{ id }}</td>
                        <td>{{ name }}</td>
                        <td>{{ webhook_url }}</td>
                    </tr>
                {{/ bots }}
                {{/ botListIsEmpty }}
            </tbody>
        </table>
        <input type="submit" name="save" class="btn" value="{{ btn_save }}" />
    </fieldset>
</form>
