<div id="modal-edit-bot-{{ getId }}" class="tlp-modal" role="dialog" aria-labelledby="modal-big-content-label-{{ getId }}">
    <form method="POST" action="?action=edit_bot">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}
        <div class="tlp-modal-header">
            <h1 class="tlp-modal-title" id="modal-big-content-label-{{ getId }}">
                <i class="fa fa-pencil-square-o tlp-modal-title-icon"></i> {{ modal_edit_title}}
            </h1>
            <div class="tlp-modal-close" data-dismiss="modal" aria-label="Close">
                &times;
            </div>
        </div>
        <div class="tlp-modal-body">
            <input type="hidden" name="bot_id" value="{{ getId }}">
            <div class="tlp-form-element">
                <label class="tlp-label" for="bot-mattermost-name">{{ label_bot_id }}</label>
                <p>#{{ getId }}</p>
            </div>
            <div class="tlp-form-element">
                <label class="tlp-label" for="bot-mattermost-name">
                    {{ label_bot_name }} <i class="fa fa-asterisk"></i>
                </label>
                <input id="bot-mattermost-name" type="text" class="tlp-input" name="bot_name" value="{{ getName }}"
                       placeholder="{{ input_bot_name }}" required>
            </div>
            <div class="tlp-form-element">
                <label class="tlp-label" for="bot-mattermost-webhook-url">
                    {{ label_hook_url }} <i class="fa fa-asterisk"></i>
                </label>
                <input id="bot-mattermost-webhook-url" type="url" class="tlp-input" name="webhook_url"
                       value="{{ getWebhookUrl }}" placeholder="{{ input_url }}" required pattern="{{ pattern_url }}">
            </div>
            <div class="tlp-form-element">
                <label class="tlp-label" for="bot-mattermost-avatar-url">{{ label_avatar_url }}</label>
                <input id="bot-mattermost-avatar-url" type="url" class="tlp-input" name="avatar_url"
                       value="{{ getAvatarUrl }}" placeholder="{{ input_url }}" pattern="{{ pattern_url }}">
            </div>
        </div>
        <div class="tlp-modal-footer">
            <input type="hidden" name="bot_id" value="{{ getId }}">
            <button type="button" class="tlp-button-primary tlp-button-outline tlp-modal-action" data-dismiss="modal">
                {{ button_close }}
            </button>
            <button type="submit" class="tlp-button-primary tlp-modal-action">
                <i class="fa fa-save tlp-button-icon"></i> {{ button_update }}
            </button>
        </div>
    </form>
</div>