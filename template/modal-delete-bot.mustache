<div id="modal-delete-bot-{{ getId }}" class="tlp-modal tlp-modal-danger" role="dialog"
     aria-labelledby="modal-simple-content-label-{{ getId }}">
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="modal-simple-content-label-{{ getId }}">
            <i class="fa fa-trash-o tlp-modal-title-icon"></i> {{ modal_delete_title }}
        </h1>
        <div class="tlp-modal-close" data-dismiss="modal" aria-label="Close">
            &times;
        </div>
    </div>
    <div class="tlp-modal-body">
        <p>{{ modal_delete_bot_content }}</p>
    </div>
    <div class="tlp-modal-footer">
        <form method="POST" action="?action=delete_bot">
            {{# csrf_token }}
                {{> csrf_token_input }}
            {{/ csrf_token }}
            <input type="hidden" name="bot_id" value="{{ getId }}">
            <button type="button" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
                {{ button_close }}
            </button>
            <button type="submit" class="tlp-button-danger tlp-button-action tlp-modal-action">
                <i class="fa fa-trash-o tlp-button-icon"></i> {{ button_delete }}
            </button>
        </form>
    </div>
</div>