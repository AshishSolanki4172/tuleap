<div id="bot-configuration-section" class="agiledashboard-admin-section">
    <section>
        <h3><i class="icon-envelope"></i> {{ title }}</h3>
        <div id="bot-assigned" class="container-fluid">
            {{^ bot_assigned }}
                <p>{{ any_configured_notification }}</p>
                <button class="btn btn-primary" data-toggle="modal" href="#admin-config-bot-add">
                    {{ button_config }}
                </button>
                {{> modal-add-bot }}
            {{/ bot_assigned }}
            {{# bot_assigned }}
                <div>
                    <p class="bot-assigned-label">{{ table_col_name }}</p>
                    <p>{{# avatar }}<img class="avatar img-circle" src="{{ avatar }}">{{/ avatar }}{{ name }}</p>
                </div>
                <div>
                    <p class="bot-assigned-label">{{ label_send_time }}</p>
                    <p>{{ send_time }}</p>
                </div>
                <div>
                    <p class="bot-assigned-label">{{ table_col_channels }}</p>
                    <p>{{ channels }}</p>
                </div>

                <button class="btn btn-primary" data-toggle="modal" href="#admin-config-bot-edit-{{ id }}">
                    <i class="icon-edit"></i> {{ button_edit }}
                </button>
                {{> modal-edit-bot }}
                <button class="btn btn-danger" data-toggle="modal" href="#admin-config-bot-delete-{{ id }}">
                    <i class="icon-trash"></i> {{ button_delete }}
                </button>
                {{> modal-delete-bot }}
            {{/ bot_assigned }}
        </div>
    </section>
</div>