<tr>
    <td>
        <label>{{# dgettext }}tuleap-tracker | Start date{{/ dgettext }}</label>
    </td>
    {{# start_date }}
        <td>{{ . }}</td>
    {{/ start_date }}
    {{^ start_date }}
        <td class="crossref-tooltip-value-undefined">
            {{# dgettext }}tuleap-tracker | Undefined{{/ dgettext }}
        </td>
    {{/ start_date }}
</tr>
<tr>
    <td>
        <label>{{# dgettext }}tuleap-tracker | End date{{/ dgettext }}</label>
    </td>
    {{# end_date }}
        <td>
            {{ . }}
            {{# is_end_date_in_error }}
                <br/>
                <span class="crossref-tooltip-value-error">
                    {{# dgettext }}tuleap-tracker | End date is lesser than start date!{{/ dgettext }}
                </span>
            {{/ is_end_date_in_error }}
        </td>
    {{/ end_date }}
    {{^ end_date }}
        <td class="crossref-tooltip-value-undefined">
            {{# dgettext }}tuleap-tracker | Undefined{{/ dgettext }}
            {{# time_period_error_message }}
                <br/>
                <span class="crossref-tooltip-value-error">
                    {{ . }}
                </span>
            {{/ time_period_error_message }}
        </td>
    {{/ end_date }}
</tr>
