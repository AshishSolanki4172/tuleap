<div class="tlp-framed-vertically">
    <h1 class="tlp-framed-horizontally" data-test="git-administration-page">{{ git_admin }}</h1>

    <nav class="tlp-tabs">
        <a class="tlp-tab" href="/plugins/git/?action=admin-gerrit-templates&group_id={{ project_id }}">{{ tab_gerrit_templates }}</a>
        <a class="tlp-tab" href="/plugins/git/?action=admin-git-admins&group_id={{ project_id }}">{{ tab_git_admins }}</a>
        {{# are_mirrors_defined }}
            <a class="tlp-tab" href="/plugins/git/?action=admin-mass-update&group_id={{ project_id }}">{{ tab_mass_update }}</a>
        {{/ are_mirrors_defined }}
        <a class="tlp-tab" href="/plugins/git/?action=admin-default-settings&group_id={{ project_id }}">{{ tab_template_settings }}</a>
        {{# external_pane_presenters }}
            <a class="tlp-tab {{# isActive }}tlp-tab-active{{/ isActive }}" href="{{ getUrl }}">{{ getPaneName }}</a>
        {{/ external_pane_presenters }}
    </nav>

    <section class="tlp-pane-section">
        {{# is_a_group_already_linked }}
            <section class="tlp-pane">
                <div class="tlp-pane-container">
                    <div class="tlp-pane-header">
                        <h1 class="tlp-pane-title">
                            {{# dgettext }} tuleap-gitlab | Linked group information {{/ dgettext }}
                        </h1>
                    </div>
                    <section class="tlp-pane-section">
                        {{# dgettext }} tuleap-gitlab | A group is already linked to this project. {{/ dgettext }}
                    </section>
                </div>
            </section>
        {{/ is_a_group_already_linked }}
        {{^ is_a_group_already_linked }}
            <div
                id="gitlab-group-link-app"
                data-current-project-name="{{ current_project_name }}"
                data-current-project-unix-name="{{ current_project_unix_name }}"
                data-current-project-id="{{ current_project_id }}"
            ></div>
        {{/ is_a_group_already_linked }}
    </section>
</div>
