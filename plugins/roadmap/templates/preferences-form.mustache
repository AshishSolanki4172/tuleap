<div class="tlp-form-element">
    <label class="tlp-label" for="title-{{ widget_id }} ">
        {{# gettext }}Title{{/ gettext }}
        <i class="fas fa-asterisk" aria-hidden="true"></i>
    </label>
    <input
        type="text"
        class="tlp-input"
        id="title-{{ widget_id }} "
        name="roadmap[title]"
        value="{{ title }}"
        required
        placeholder="{{# dgettext }}tuleap-roadmap | Roadmap{{/ dgettext }}"
    >
</div>
<div class="tlp-form-element">
    <label class="tlp-label" for="tracker-id-{{ widget_id }} . '">
        {{# dgettext }}tuleap-roadmap | Tracker id{{/ dgettext }}
        <i class="fas fa-asterisk" aria-hidden="true"></i>
    </label>
    <input
        type="number"
        size="5"
        class="tlp-input"
        id="tracker-id-{{ widget_id }}"
        name="roadmap[tracker_id]"
        {{# tracker_id }}value="{{ . }}"{{/ tracker_id }}
        required
        placeholder="123"
    >
</div>
