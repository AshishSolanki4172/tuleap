<h2 class="project-sidebar-tools-section-label">{{# gettext }}Tools{{/ gettext }}</h2>

<nav class="project-sidebar-nav" data-test="project-sidebar" data-project-id="{{ project_id }}">
    {{# sidebar }}
        <a
            href="{{ href }}"
            aria-label="{{ label }}"
            class="project-sidebar-nav-item {{# is_active }}active{{/ is_active }}"
            title="{{ description }}"
            {{# open_in_new_tab }}target="_blank" rel="noopener noreferrer"{{/ open_in_new_tab }}
            data-shortcut-sidebar="sidebar-{{ shortcut_id }}"
        >
            <i class="project-sidebar-nav-item-icon {{ icon }}" aria-hidden="true"></i>
            <span class="project-sidebar-nav-item-label">{{ label }}</span>
            {{# open_in_new_tab }}
            <i class="fas fa-arrow-right project-sidebar-nav-item-new-tab" aria-hidden="true"></i>
            {{/ open_in_new_tab }}
        </a>
    {{/ sidebar }}
</nav>
