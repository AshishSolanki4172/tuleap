<section class="help-modal-shortcuts-section">
    <h2 class="tlp-modal-subtitle">{{# gettext }}Global shortcuts{{/gettext}}</h2>
    <table class="tlp-table help-modal-shortcuts-table">
        <thead>
            <tr>
                <th class="help-modal-shortcuts-description">{{# gettext }}Description{{/ gettext }}</th>
                <th class="tlp-table-cell-actions">{{# gettext }}Shortcut{{/ gettext }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{# gettext }}Open this window{{/ gettext }}</td>
                <td class="help-modal-shortcuts-kbds tlp-table-cell-actions"><kbd>?</kbd></td>
            </tr>
            <tr>
                <td>{{# gettext }}Open "+ New" dropdown{{/ gettext }}</td>
                <td class="help-modal-shortcuts-kbds tlp-table-cell-actions"><kbd>c</kbd></td>
            </tr>
            <tr>
                <td>{{# gettext }}Go to personal dashboard{{/ gettext }}</td>
                <td class="help-modal-shortcuts-kbds tlp-table-cell-actions"><kbd>d</kbd></td>
            </tr>
            <tr>
                <td>{{# gettext }}Switch to...{{/gettext}}</td>
                <td class="help-modal-shortcuts-kbds tlp-table-cell-actions"><kbd>/</kbd> {{# gettext }}or{{/gettext}} <kbd>s</kbd></td>
            </tr>
        </tbody>
    </table>
</section>

<template data-shortcuts-help-header-template>
    <thead>
        <tr>
            <th class="help-modal-shortcuts-description">{{# gettext }}Description{{/ gettext }}</th>
            <th class="tlp-table-cell-actions">{{# gettext }}Shortcut{{/ gettext }}</th>
        </tr>
    </thead>
</template>
