<section class="account-registration">
    <h1 class="accont-registration-creation-title">{{ title }}</h1>
    <form action="/account/reset-lostpw" class="tlp-card account-registration-form" method="post">
        <p>{{# gettext }}Welcome, %1$s. You may now change your lost password. | {{ current_user_real_name }}{{/ gettext }}</p>

        <div class="tlp-form-element {{# has_error }}tlp-form-element-error{{/ has_error }}">
            <label class="tlp-label" for="form_pw">
                {{# gettext }}New password{{/ gettext }}
                <i class="fa-solid fa-asterisk" aria-hidden="true"></i>
            </label>
            <input type="password"
                   value=""
                   class="tlp-input"
                   id="form_pw"
                   name="form_pw"
                   required
                   autocomplete="new-password"
                   data-password-validators="{{ json_password_strategy_keys }}"
            >
            {{# has_error }}
                <p class="tlp-text-danger">{{# errors }}{{ . }}<br>{{/ errors }}</p>
            {{/ has_error }}
        </div>

        <div class="tlp-form-element">
            <label class="tlp-label" for="form_pw2">
                {{# gettext }}Repeat new password{{/ gettext }}
                <i class="fa-solid fa-asterisk" aria-hidden="true"></i>
            </label>
            <input type="password"
                   value=""
                   class="tlp-input"
                   id="form_pw2"
                   name="form_pw2"
                   required
                   autocomplete="new-password"
                   data-password-validators="{{ json_password_strategy_keys }}"
            >
        </div>
        {{> register-choose-password }}

        <input type="hidden" name="confirm_hash" value="{{ confirm_hash }}">

        <input
            type="submit"
            class="tlp-button tlp-button-primary tlp-button-wide tlp-button-large account-registration-form-submit"
            value="{{# gettext }}Save password{{/gettext}}"
        />
    </form>
</section>

<div class="account-registration-background">
    {{> homepage-background }}
</div>
