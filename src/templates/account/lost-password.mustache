<section class="account-registration">
    <h1 class="accont-registration-creation-title">{{ title }}</h1>
    {{# error_message }}
        <div class="tlp-alert-danger account-registration-error">{{ . }}</div>
    {{/ error_message }}
    <form action="/account/lostpw" class="tlp-card account-registration-form" method="post">
        <p>{{# gettext }}Enter your login name below to receive a link allowing you to change your password.{{/ gettext }}</p>
        <div class="tlp-form-element">
            <label class="tlp-label" for="form_loginname">
                {{# gettext }}Login name{{/ gettext }}
                <i class="fa-solid fa-asterisk" aria-hidden="true"></i>
            </label>
            <input
                type="text"
                class="tlp-input"
                id="form_loginname"
                name="form_loginname"
                placeholder="fox_mulder"
                autocomplete="username"
                required
            >
        </div>
        <input
            type="submit"
            class="tlp-button tlp-button-primary tlp-button-wide tlp-button-large account-registration-form-submit"
            value="{{# gettext }}Email me a recovery link{{/gettext}}"
        />
    </form>
</section>

<div class="account-registration-background">
    {{> homepage-background }}
</div>
